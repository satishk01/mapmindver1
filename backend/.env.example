# Database Configuration
# Option 1: Local MongoDB (development)
mongo_db_url=mongodb://localhost:27017/mindmap

# Option 2: MongoDB Atlas (recommended for production)
# mongo_db_url=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/mindmap?retryWrites=true&w=majority

# Option 3: MongoDB on separate EC2 instance
# mongo_db_url=mongodb://username:password@your-mongodb-ec2-ip:27017/mindmap

# Option 4: Amazon DocumentDB
# mongo_db_url=mongodb://username:password@your-cluster.cluster-xxxxx.docdb.amazonaws.com:27017/mindmap?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false

# LLM Provider Configuration
# Options: "openai" or "bedrock"
llm_provider=openai

# OpenAI Configuration (required if llm_provider=openai)
openai_api_key=your_openai_api_key_here

# AWS Configuration (required if llm_provider=bedrock or for S3/Textract)
aws_access_key_id=your_aws_access_key_id
aws_secret_access_key=your_aws_secret_access_key
aws_region=us-east-1

# AWS S3 Configuration
bucket_name=your_s3_bucket_name

# Google Cloud Configuration (optional - for multimodal features like image/video processing)
# gemini_api_key=your_gemini_api_key
# gcp_project_id=your_gcp_project_id

# Note: For AWS Bedrock on EC2 with IAM roles, you can omit aws_access_key_id and aws_secret_access_key
# The application will automatically use the EC2 instance's IAM role for authentication